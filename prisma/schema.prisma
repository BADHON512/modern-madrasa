generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  email              String   @unique
  password           String
  className          String?
  registrationNumber String   @unique
  avatar             Json
  admissionDate      DateTime @default(now())
  guardianName       String?
  contact            String?
  address            String?
  role               String
  createdAt          DateTime @default(now())

  @@unique([role], name: "super_admin")
}

model Course {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  class       String
  subject     String
  description String?
  createdAt   DateTime @default(now())
}

model Notice {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  createdAt DateTime @default(now())
}

model Student {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  className          String
  guardianName       String?
  contact            String?
  address            String?
  registration       String
  registrationNumber String  @unique
  avatar             Json
  dateOfBirth        String
  gender             String?
  nationality        String?
  religion           String?
  bloodGroup         String?
  emergencyContact   String?

  createdAt DateTime @default(now())
}

model Teacher {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  contact       String?
  avatar        Json
  gender        String?
  address       String?
  qualification String?
  createdAt     DateTime @default(now())
}
