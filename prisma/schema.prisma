generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  email              String   @unique
  password           String
  className          String?
  registrationNumber String   @unique
  avatar             Json
  admissionDate      DateTime @default(now())
  guardianName       String?
  contact            String?
  address            String?
  role               String
  createdAt          DateTime @default(now())

  @@unique([role], name: "super_admin")
}

model Course {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  class       String
  subject     String
  description String?
  createdAt   DateTime @default(now())
}

model Notice {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  createdAt DateTime @default(now())
}
